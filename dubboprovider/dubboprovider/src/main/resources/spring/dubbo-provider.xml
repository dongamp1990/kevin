        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<dubbo:application name="order_app" />

	<!--zookeeper注册中心 -->
	<dubbo:registry protocol="zookeeper" address="192.168.177.199:2181" />

	<!--使用multicast广播注册中心暴露服务地址 -->
<!-- 	<dubbo:registry address="multicast://224.5.6.7:1234" /> -->

	<dubbo:protocol name="dubbo" port="20881" />
	
	<bean id="orderService" class="org.kevin.dubboapi.impl.OrderServiceImpl" />
	<dubbo:service interface="org.kevin.dubboapi2.OrderService" ref="orderService"  timeout="50" />
	
